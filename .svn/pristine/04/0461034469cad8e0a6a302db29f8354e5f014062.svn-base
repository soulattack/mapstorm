<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport"
        content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0" />
    <meta name="format-detection" content="telephone=no,email=no,date=no,address=no">
    <title>推广</title>
    <link rel="stylesheet" type="text/css" href="../css/api.css" />
    <link rel="stylesheet" type="text/css" href="../css/style.css" />
    <link rel="stylesheet" type="text/css" href="../css/city.css" />
    <link rel="stylesheet" type="text/css" href="../css/city.css" />
    <link rel="stylesheet" type="text/css" href="../css/mobileSelect.css" />
    <style>
        [v-cloak] {
            display: none;
            
        }

        body {
            background: white !important;
        }

        .bodys {
            background: white !important;
            padding-top: 28px;
        }

        /* .box .wrap {
            display: none;
        } */

        .box .SoKing {
            display: block;
        }

        .tab {
            margin: 0;
            padding: 0;
            list-style: none;
            width: 100%;
            display: flex;
            position: fixed;
            top: 0px;
        }

        .tab li {
            width: 50%;
            height: 50px;
            background: white;
            color: black;
            background-color: #217bfb;
            text-align: center;
            line-height: 50px;
            font-size: 20px;
        }

        .on {
            display: block;
        }

        .tab li.cur {
            color: white;
        }

        .SoKing .top {
            width: 100%;
            display: flex;
            height: 30px;
            line-height: 30px;
            background: white;
        }

        .SoKing .abs {
            width: 100%;
             position: fixed;
           /* position: absolute; */
            top: 0px;
        }

        .SoKing .top .left {
            width: 100%;
            text-align: center;
            margin-right: 50px;
        }

        .SoKing .top .left img {
            width: 15px;
            height: 15px;
            vertical-align: middle;
        }

        .Oin {
            height: 30px;
            margin-left: 5%;
            margin-top: 10px;
            margin-right: 5%;
            display: none;
        }

        .Oin input {
            outline: medium;
            text-align: center;
            background: white;
            width: 100%;
            height: 30px;
            line-height: 30px;
        }

        .contant {
            background: white;
            margin: 40px 0 50px;
        }

        .contant .contant-box {
            border-bottom: 1px solid #eee;
            margin-bottom: 10px;
            padding: 2px 20px 6px 20px;
        }

        .contant-box .contant-top {
            line-height: 24px;
        }

        .contant-box .contant-main {
            line-height: 24px;
            font-size: 14px;
            /* display: flex; */
            color: #ccc;
            /* justify-content: space-between; */
        }

        .footer {
            position: fixed;
            bottom: 0;
            width: 100%;
            height: 50px;
            background: #eee;
            display: flex;
            line-height: 50px;
        }

        .footer .footertext {
            width: 50%;
        }

        .footer .footertext span {
            display: black;
            width: 100%;
            background: #217bfb;
            padding: 0 5px;
            text-align: center;
            font-size: 16px;
            color: white;
        }

        .two {
            margin: 10px 5%;
            background: white;
        }

        .maintwo {
            display: flex;
            padding-top: 10px;
            height: 30px;
            line-height: 30px;
        }

        .maintwo .mainleft {
            width: 25%;
            text-align: left;
            padding-left: 10px;
        }

        .maintwo .mainright {
            width: 70%;
            background: white;
            border-radius: 10px;
        }

        .maintwo .mainright img {
            width: 25px;
            height: 20px;
            display: inline-block;
            vertical-align: middle;
            /* float: right; */
            padding-top: 5px;
        }

        .maintwo .operbox {
            display: flex;
            justify-content: space-around;
        }

        .maintwo .operbox .operators {
            width: 50px;
            height: 25px;
            line-height: 25px;
            text-align: center;
            border-radius: 10px;
        }

        .operbox .active {
            color: #12ADA9;
            border: 1px solid #12ADA9;
        }

        .phone {
            width: 80px;
            height: 35px;
            line-height: 35px;
            background-color: #12ADA9;
            text-align: center;
            margin-top: 20px;
            border-radius: 10px;
            color: white;
            margin-left: 10px;
        }

        .phonecontant .phonetop {
            width: 92%;
            background: #eee;
            height: auto;
            min-height: 150px;
            margin-left: 10px;
            margin-top: 10px;
            border-radius: 5px;
            color: #ccc;
        }

        .phonecontant .clear {
            color: #ccc;
            margin-left: 10px;
            margin-top: 5px;
        }

        .bottom {
            width: 100%;
            display: flex;
            padding: 0 2%;
            height: 80px;
            background: white;
            margin-top: 20px;
        }

        .bottom .call {
            width: 33%;
            text-align: center;
            position: relative;
        }

        .bottom .call img {
            width: 50px;
            height: 50px;
        }

        .bottom .call p {
            line-height: 0px;
            padding: 5px 0 0 0;
            margin: 0;
            font-size: 14px;
        }

        .bottom .call .line {
            width: 1px;
            height: 35px;
            position: absolute;
            top: 8px;
            right: 0;
            background: #ccc;
        }

        .conditionW {
            background: #217bfb;
            padding: 5px 0 0 0;
            height: 40px
        }

        .conditionW ul {
            display: flex
        }

        .conditionW li {
            flex: 1;
            height: 40px;
            line-height: 40px;
            text-align: center;
        }

        .conditionW li span {
            position: relative;
            font-size: 16px;
            padding: 0 20px
        }

        .conditionW li span::after {
            position: absolute;
            content: "";
            width: 0;
            height: 0;
            top: 50%;
            right: 2px;
            margin-top: -2px;
            border-top: 8px solid white;
            border-left: 6px solid transparent;
            border-right: 6px solid transparent;
            border-bottom: 0px solid transparent
        }

        .tipbox{
            margin: 40% 0 0 0;
            text-align: center;font-size: 16px;
        }
        .len{background: white; color:#666; text-align: center; line-height: 30px;}
      .len em{color: red; margin: 0 2px;}
    </style>
</head>

<body>
    <div class="bodys"  >
        <!-- <ul class="tab" style="display: none;">
            <li class="cur">搜客</li>
            <li>同城</li>
        </ul> -->
        <div class="box" id="vue" v-cloak>
            <div class="wrap SoKing on">
                <div class="abs" style="background-color: #217bfb;color:white;" v-if="vip">
                    <div class="conditionW">
                        <ul class="conditionList">
                            <li onclick="chooseCity()">
                                <span>
                                     <p>{{cityname}}</p>
                                   <!-- <p>city</p> -->
                                </span>
                            </li>
                            <li>
                                <span>
                                    <p id="industry">行业</p>
                                </span>
                            </li>
                        </ul>
                        <div class="len">搜索到<em>{{len}}</em>家企业，下拉加载更多 </div>
                    </div>
                </div>
                <div class="contant" v-cloak>
                    <div class="contant-box" v-for="(item,index) in list" :key="item.id">
                        <div class="contant-top">
                            <div>
                                 {{item.title}}
                            </div>
                            <div>
                                  {{item.name}}
                            </div>
                         
                        </div>
                        <div class="contant-main">
                        
                            <p v-if="!vip && item.phone">
                                <span style="color: black;">
                                    {{item.phone.substr(0, 3) + '****' + item.phone.substr(7)}}
                                </span>
                            </p>
                            <p v-else>
                                <span style="color: black;">{{item.phone}}</span>
                            </p>
                            <div>
                                 <span>{{item.address}}</span>
                            </div>
                           
                        </div>
                    </div>
                    <div class="tipbox"  v-show="!isShow">
                            <img src="../image/nodata.png" alt="">
                            <span style="line-height:30px; color:#666"> 请选择城市和行业获取数据！</span>
                    </div>
                </div>
                <div class="footer" v-show="isShow">
                    <div class="footertext" style="background-color: #f04241;" @click="phonex()">
                        <span style="background-color: #f04241;">
                            添加到通讯录
                        </span>
                    </div>
                    <div class="footertext" style="background-color: #f0aa41;"  @click="toGroupSend()">
                        <span style="background-color: #f0aa41;">
                            群发短信
                        </span>
                    </div>
                    <div class="footertext" @click="exp()">
                        <span>
                            导出
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
<script type="text/javascript" src="../script/api.js"></script>
<script type="text/javascript" src="../script/vue.min.js"></script>
<script type="text/javascript" src="../script/jquery-1.7.2.min.js"></script>
<script type="text/javascript" src="../script/city.js"></script>
<script type="text/javascript" src="../script/tools.js"></script>
<script type="text/javascript" src="../script/mobileSelect.min.js"></script>
<script type="text/javascript">
    var vm, size = 50, index = 0, loadmore = false, indtype = [];
    apiready = function () {
        fixbar();
        vm = new Vue({
            el: "#vue",
            data: {
                vip: false,
                cityname: "城市",
                list: [],
                exlist:[],
                phoneList: [],
                typeList: [],
                industryId: '',
                addlist: [],
                isShow:false,
                len:0
            },
            created: function () {
                this.getData();
            },
            methods: {
                /*获取数据*/
                getData() {
                    /*获取用户信息*/
                    userinfo();
                },
                /*群发短信*/
                toGroupSend() {
                    if (!vm.vip) {
                        tip(); return;
                    }
                    var phoneArr = trimSpace(this.phoneList);
                    var phoneStr = "";
                    for (var i = 0; i < phoneArr.length; i++) {
                        phoneStr += phoneArr[i] + ","
                    }
                    phoneStr = phoneStr.substring(0, phoneStr.length - 1);
                    api.openWin({
                        name: "myGroupSend",
                        url: "./myGroupSend.html",
                        pageParam: {
                            phone: phoneStr
                        }
                    })
                },


                exp(){
                    console.log(" 弹窗")
                    console.log("打开弹窗");
                            dbs = api.require('dialogBox');
                        dbs.actionMenu ({
                                    rect:{
                                        h: 150
                                    },
                                    texts:{
                                        cancel: '取消'
                                    },
                                    items:[
                                    {
                                        text: '下载',
                                        icon: 'widget://image/tools/dl.png'
                                    },
                                    {
                                        text: '分享',
                                        icon: 'widget://image/tools/wx.png'
                                    },
                                    
                                    ],
                        styles:{
                            bg:'#FFF',
                            column: 2,
                            itemText: {
                                color: '#000',
                                size: 12,
                                marginT:8
                            },
                            itemIcon:{
                                size:50
                            },
                            cancel:{  
                                bg: 'fs://icon.png',   
                                color:'#000',          
                                h: 44 ,                 
                                size: 14       
                            }
                        }
                    }, function(ret){
                        console.log(JSON.stringify(ret));
                        if(ret.eventType=="click"){
                                if(ret.index==0){
                                console.log("点击下载")
                                dbs.close({
                                    dialogName: 'actionMenu'
                                });
                                vm.download()
                            }else if(ret.index==1){
                                console.log("点击分享")
                                dbs.close({
                                    dialogName: 'actionMenu'
                                });
                                vm.shareUrl()
                            }
                        }else if(ret.eventType=="cancel")
                        {
                            console.log("guanbi")
                            dbs.close({
                                    dialogName: 'actionMenu'
                            });
                            
                        }
                    

                    });
                },
                download(){
                    console.log("zdede");
                    console.log("download!!!!")
                 if (!vm.vip) {
                    tip();
                     return;
                }
                var jsonData = vm.exlist;
                    var tlejson={
                         title:"商家名称",
                         city:"所属城市",
                         name:"负责人",
                         phone:"手机",
                         tel:"邮箱",
                         address:"地址",
                         money:"注册资金",
                         build_name:"成立时间",
                         type_name:"分类"
                    }
                    jsonData.unshift(tlejson);

                 apidata({
                        url: "/api/jed/to_excel",
                        data: {
                            uid: $api.getStorage("uid"),
                            lists: jsonData
                        }
                    }, function (ret) {
                        if (ret.status == 200) {
                            var urls = ret.data;
                            console.log("xian:"+urls);
                            api.download({
                                url: urls
                            }, function (ret, err) {
                                var url = ret.savePath;
                            
                                showTip('导出地址为:' + url, '5000', 'bottom');
                            console.log("url:"+url)
                          
                            })
                        } else {
                            showTip(ret.return_msg, 1200, "middle")
                        }
               });  
            

                },
 

                shareUrl(){
                 console.log("shareUrl!!!!")
                 if (!vm.vip) {
                    tip();
                     return;
                }
                var jsonData = vm.exlist;
               
                    var tlejson={
                         title:"商家名称",
                         city:"所属城市",
                         name:"负责人",
                         phone:"手机",
                         tel:"邮箱",
                         address:"地址",
                         money:"注册资金",
                         build_name:"成立时间",
                         type_name:"分类"
                    }
                    jsonData.unshift(tlejson);

                apidata({
                    url: "/api/jed/to_excel",
                    data: {
                        uid: $api.getStorage("uid"),
                        lists: jsonData
                    }
                }, function (ret) {
                    if (ret.status == 200) {
                        var urls = ret.data;
                        console.log("xian:"+urls);
                        api.download({
                            url: urls
                        }, function (ret, err) {
                            var url = ret.savePath;
                    
                            console.log("url:"+url)
                           vm.share(urls)
                        })
                    } else {
                        showTip(ret.return_msg, 1200, "middle")
                    }
                });  

            },
            share(url){
                var wxPlus = api.require('wxPlus');
                wxPlus.shareWebpage({
                    apiKey: 'wx1b930cf8a9a1c42f',
                    scene: 'session',
                    title: '报表分享',
                       description: '',
                    // thumb: app(),
                    //  contentUrl: fen() + 'index.php?s=/home/index/user/uid/' + 100029
                     contentUrl:url
                }, function(ret, err) {
                    if (ret.status) {
                        //alert('分享成功');
                    } else {
                        //alert(err.code);
                    }
                });
             },

            },
            /** methods end  ***/
        })

        /*** vm end**/ 

        add();
    }

  /*** apiready end **/


    /*下拉加载*/
    function add() {
        api.addEventListener({
            name: 'scrolltobottom',
            extra: { threshold: 10 }
        }, function (ret, err) {
            if (!vm.vip) {
                tip();
                return;
            }
            var c = vm.cityname;
            if (kong(c) == "" || c == undefined || c == null || c == "城市") {
                showTip("请选择城市获取数据！", 2000, "middle");
                return;
            }
            if (!isNotEmpry(vm.industryId)) {
                showTip("请选择行业获取数据！", 2000, "middle");
                return;
            }
            index += size;
            datas(index, c);
        });
    }

    //获取数据
    function datas(index, city) {
        var sdata = {
            uid: $api.getStorage("uid"),
            keys: "",
            start: index,
            city: city,
            tid: vm.industryId,
            num: size
        };
        console.log(JSON.stringify(sdata));
        apidata({
            url: "/api/jed/customer_lists",
            data: sdata
        }, function (ret) {
            if (ret) {
                if (loadmore && ret.data.length == 0) {
                    showTip("暂无数据", 700, "bottom");
                    return
                }
                if (!loadmore && ret.data.length == 0) {
                    showTip("没有更多数据啦", 700, "bottom");
                    return
                }
                if (ret.data.length != 0) {
                    loadmore = true;
                }


                ret.data.forEach(element => {
                    vm.list.push(element);
                    vm.phoneList.push(element.phone)
                });
              
                ret.data.forEach(element=>{
                      delete element.id;
                      delete element.type;
                      var btime=timeFormat_build(element.build_time);
                       element.build_time=btime;
                      vm.exlist.push(element);
                     
               
                });

                console.log(JSON.stringify(vm.exlist))





                vm.len=vm.list.length
                var sta = Number(sdata.start) + Number(10);
                $api.setStorage("start", sta);

                if(vm.list.length>0){
                    vm.isShow=true
                }else{
                    vm.isShow=false
                }
            }
        });
    };

    //搜客添加到通讯录
    function phone() {
        var DVContacts = api.require('DVContacts');
        DVContacts.allContacts(function (ret, err) {
            if (ret) {
                console.log(JSON.stringify(ret));
            } else {
                console.log(JSON.stringify(err));
            }
        });
    };

    function addPhone() {
        var cc = api.require('DVContacts');
        cc.add({
            firstName: "测试名字",
            phones: [{
                '工作': "18252160456"
            }],
            company: "狗大户",
        }, function (ret, err) {
            if (ret) {
                console.log(JSON.stringify(ret));
            } else {
                console.log(JSON.stringify(err));
            }
        });
    }

    function phonex() {
         
        if (!vm.vip) {
            tip(); return;
        }
        ppp("contacts",function(){
                    var num = $api.getStorage('start');
            var end = $api.getStorage('newstart');
            newstart = Number(end) + Number(10);
            var pieces = Number(num) + Number(10);
            var deviceid = api.deviceId;
            var datas = {
                uid: $api.getStorage('uid'),
                keys: "",
                start: 0,
                num: pieces
            }
            if (pieces > newstart) {
                datas.start = newstart;
                datas.num = Number(pieces) - Number(newstart);
            }
            console.log(JSON.stringify(datas));

            apidata({
                url: "/api/jed/customer_lists",
                data: datas
            }, function (ret) {
                var list = ret.data;
                var arr = 0;
                for (var i = 0; i < list.length; i++) {
                    if (list[i].phone) {
                        arr++;
                    }
                }
                api.confirm({
                    title: '提示',
                    msg: '确定添加' + arr + '位联系人到通讯录 ',
                    buttons: ['确定', '取消']
                }, function (ret, err) {
                    if (ret) {
                        if (ret.buttonIndex == 1) {
                            tag = 1;
                            for (var i = 0; i < list.length; i++) {
                                if (list[i].phone) {
                                    var contacts = api.require('DVContacts');
                                    contacts.add({
                                        firstName: list[i].name,
                                        phones: [{
                                            '工作': list[i].phone
                                        }],
                                        company: list[i].title,
                                    }, function (ret, err) {
                                        if (ret) {
                                            console.log(JSON.stringify(ret));
                                        } else {
                                            console.log(JSON.stringify(err));
                                        }
                                    });
                                }
                            }
                            $api.setStorage('newstart', pieces);
                            showTip("添加成功", "2000", 'bottom')
                        } else {
                            return;
                        }
                    } else {
                        console.log(err);;
                    }
                });
            }, function (err) {
                console.log(JSON.stringify(err));
            })
        })
  
    }

    /*获取行业类型*/
    function getIndustryType() {
        var sdata = {
            uid: $api.getStorage("uid"),
            type: 1
        };
        apidata({
            url: "/api/jed/types_lists",
            data: sdata
        }, function (ret) {
            vm.typeList = ret.data;
            var list = [];
            var list = ret.data;
            if (!list) {
                return;
            }
            ret.data.forEach(element => {
                indtype.push(element)
            });
            ind(indtype);
        });
    };

    /*初始化行业选择*/
    function ind(arr) {
        var oarr = arr;
        var tlist = [];
        arr.forEach(el => {
            tlist.push(el.type_name)
        })
        var mobileSelect1 = new MobileSelect({
            trigger: '#industry',
            title: '',
            wheels: [
                { data: tlist }
            ],
            /*初始化定位 打开时默认选中的哪个 如果不填默认为0*/
            position: [0],
            callback: function (indexArr, data) {
                $("#industry").val(data);
                vm.industryId = oarr[indexArr].id;
                if (!isNotEmpry(vm.industryId)) {
                    showTip("请选择行业获取数据！", 2000, "middle");
                    return;
                }
                if (!isNotEmpry(vm.cityname) || "城市" == vm.cityname) {
                    showTip("请选择城市获取数据！", 2000, "middle");
                    return;
                }
                vm.list = [];
                datas(0, vm.cityname);
            }
        });
    }

    /*城市选择*/
    function chooseCity() {
        api.openFrame({
            name: "city",
            url: "city.html",
            rect: {
                x: 0,
                y: 0,
                w: api.winWidth,
                h: api.winHeight - 50
            },
            pageParam: {
                from: "tourist"
            }
        })
    }

    /*城市选择回传*/
    function defCity(city) {
        if (!isNotEmpry(city)) {
            showTip("请选择城市获取数据！", 2000, "middle");
            return;
        }
        vm.cityname = city;
        if (!isNotEmpry(vm.industryId)) {
            showTip("请选择行业获取数据！", 2000, "middle");
            return;
        }
        vm.list = [];
        index = 0;
        datas(0, city)
    }

    /*获取用户信息*/
    function userinfo() {
        apidata({
            url: "/api/jed/user_info",
            data: {
                uid: $api.getStorage("uid"),
            }
        }, function (ret) {

              var nowstamp=new Date().getTime();

            // if (ret.data.is_vip == 1) {
            if (parseInt(ret.data.vip_end)*1000>nowstamp) {
                vm.vip = true;
          
                getIndustryType();
            
            } else {
                tip();
                return;
            }
        });
    }

    /*开通会员提示窗*/
    function tip() {
        var dialogBox = api.require('dialogBox');
        dialogBox.taskPlan({
            rect: {
                w: 300
            },
            texts: {
                mainTitle: '温馨提示',
                subTitle: '',
                content: [{
                    text: '权限不足，请开通会员解锁所有功能'
                }],
                btnTitle: '开通会员'
            },
            styles: {
                bg: '#fff',
                corner: 10,
                main: {
                    marginT: 20,
                    color: '#636363',
                    size: 18,
