html{margin: 0}
body{
    font-size: 10px;
    font-family: "microSoft Yahei";
    margin:0;
}
input{ outline: none;}
input[type=button], input[type=submit], input[type=file], button { cursor: pointer; -webkit-appearance: none; }
ul,li{list-style: none}
button{outline: none}
.header{
    
    height: 44px; 
    line-height: 44px;
    background: white; color: #333;
    position: relative;
    font-size: 14px;

    position: fixed;
    width: 100%;
    z-index: 100;
    /**/ top:0; 
    /* background: #1eaca0 */
    background: #217bfb;
    color: white
    
}
.header .headerLeft{
    position: absolute;
    /* top:0; */
    left:0;
}

.headerLeft i{font-size: 20px;margin: 0 0 0 10px}

.header .headerRight{
    position: absolute;
    /* top:0; */
    right:0;
}
.header .headerTle{text-align: center;position: absolute; left: 8rem;right:8rem;  font-size: 16px;font-weight: bold;}
.header .headerRight i{ margin: 0 10px 0 0;font-size: 20px}

