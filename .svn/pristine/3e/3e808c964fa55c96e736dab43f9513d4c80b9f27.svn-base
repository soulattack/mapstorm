
/**feedback 意见与建议**/
body{ background: #ededed}

.m{font-size: 12px}

.m .textArea{ 
    margin: 20px 20px; background: white;
  border-radius:10px;
  position: relative;
} 

.m .textArea textarea{ width: 94%; padding: 15px 3%;resize: none;font-size: 14px}
.m .textArea .numcount{
    position: absolute;
    bottom:10px;
    right:20px;
   
    color: #9f9f9f
}
.m .textArea .numcount b{   font-weight: normal; }

.m .submitArea{ margin:20px} 
.submitArea input{ 
  display: block; 
  /* background: #12ada9; */
  background: #217bfb;
  font-size: 16px; color:white;
  width: 100%;
  height: 44px;
  line-height:44px;
  border-radius:8px;
}



/* 当前版本  currentVersion */

