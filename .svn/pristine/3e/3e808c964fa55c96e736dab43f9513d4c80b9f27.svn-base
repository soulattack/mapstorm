    margin: 20px 20px; background: white;
    border-radius:10px;
    position: relative;
}

.m .desc ul{
    margin: 0 20px;

    padding: 10px 0;
}



/* 帮助中心 helpcenter */
.helpcenter{position: absolute;
 width: 100%;
 bottom: 10px
}


/* 个人中心 personal */


.personal .personalInfoList{ 
    font-size: 14px;
    margin: 10px 0 0 0;
    background: white;
    color:#797979
}
.personal .personalInfoList li{
    display: flex; 
    align-items: center;
    margin: 0 10px;
    padding: 9px 2.5rem 9px 0;    
    background: white ;
    border-bottom: 1px solid #eee;
    height: 3rem;
   position: relative;
}

.personal .personalInfoList li::after{
    position: absolute;
    right: 10px;
    top:23px;
    content: "";
    border-top:2px solid #797979;
    border-left:2px solid #797979;
    width: 10px;
    height: 10px;
    transform: rotate(135deg);
}



.personal .personalInfoList li:last-child{
    border-bottom:none;
}

.personal .personalInfoList li .ii01{width: 5rem; font-weight: bold;text-align: center}
.personal .personalInfoList li .ii02{ flex: 1;text-align: right;}
.personal .personalInfoList li .ii02 img{ width: 3rem; height: 3rem; display: inline-block; border-radius:50%;}



.m .notice{ margin: 20px 0;background: white;border-radius:10px; }


.m .notice .noticeList li{padding: 5px 0; margin: 0 0;border-bottom: 1px solid #D7D7D7}

.m .notice .noticeList li dl{margin: 0 0 0 2em;padding: 10px 0;}
.m .notice .noticeList li dl dt{ font-size: 17px; margin: 5px 0;}
.m .notice .noticeList li dl dd{ font-size: 14px;color: #5a5a5a; margin: 0 0 5px 0}
