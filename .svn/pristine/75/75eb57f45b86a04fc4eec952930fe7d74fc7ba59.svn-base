<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0" />
    <meta name="format-detection" content="telephone=no,email=no,date=no,address=no">
    <title>登录</title>
    <link rel="stylesheet" type="text/css" href="../css/api.css" />
    <link rel="stylesheet" type="text/css" href="../css/style.css" />
    <style>
        body {
            background-color: white;
        }

        .empty {
            padding: 20px 0;
        }

        .box {
            width: 80%;
            margin: 0 auto;
            text-align: center;
        }

        .box .Oin {
            height: 50px;
            line-height: 50px;
            width: 100%;
            border-bottom: 1px solid #f5f5f5;
            display: flex;
            font-size: 16px;
        }

        .box .Oin input {
            width: 80%;
            outline: medium;
            padding-left: 5px;
        }

        .top {
            width: 100px;
            height: 100px;
            margin: 50px auto;
        }

        .top img {
            width: 100%;
            height: 100%;
        }

        .test {
            padding-top: 20px;
            color: #217bfb
        }

        .test .left {
            display: inline-block;
            width: 78%;
            text-align: left;
        }

        .test .right {
            display: inline-block;
            text-align: right;
        }

        .Obtn {
            display: inline-block;
            width: 90%;
            height: 50px;
            line-height: 50px;
            background-color: #217bfb;
            color: white;
            font-size: 24px;
            border-radius: 10px;
            margin-top: 50px;
            margin-left: 5%;
            font-weight: normal;
            outline: medium;
        }

        .footer {
            position: fixed;
            width: 100%;
            height: 50px;
            line-height: 50px;
            color: #999999;
            text-align: center;
            bottom: 10px;
        }

        .footer span {
            color: #217bfb;
        }
    </style>
</head>

<body>
    <div class="wrap empty">
        <div class="top">
            <img src="../image/tools/logo.png" alt="">
        </div>
        <div class="box">
            <div class="Oin">
                <text>账号：</text>
                <input type="number" name="username" value="18252160456" placeholder="请输入手机号" id="userName">
            </div>
            <div class="Oin">
                <text>密码：</text>
                <input type="password" name=" 密码" value="123456" placeholder="请输入密码" id="userPwd">
            </div>
            <div class="test">
                <span class="left" tapmode onclick="toRegist()">注册新用户</span>
                <span class="right" tapmode onclick="toForget()">忘记密码</span>
            </div>
            <button class="Obtn" type="button" name="button" tapmode onclick="login()">登录</button>
        </div>
        <div class="footer">
            <text>登录即同意</text><span onclick="article(5)">《用户使用协议》</span>及<span onclick="article(4)">《隐私政策》</span>
        </div>
    </div>
</body>
<script type="text/javascript" src="../script/api.js"></script>
<script type="text/javascript" src="../script/jquery-1.7.2.min.js"></script>
<script type="text/javascript" src="../script/tools.js"></script>
<script type="text/javascript" src="../script/logout.js"></script>
<script type="text/javascript">
    apiready = function () {
        ExitApp();
        api.setStatusBarStyle({
            style: 'light',
            color: '#217bfb'
        });
    }

    /*登录*/
    function login() {
        var username = kong($api.byId('userName').value);
        var password = kong($api.byId('userPwd').value);
        var sdata = {
            phone: username,
            type: "1",
            password: password,
            clientId: api.deviceId
        }
        if (!isNotEmpry(username) || !isTel(username)) {
            showTip("请输入有效的电话号码", 2000, "bottom")
            return;
        }
        if (!isNotEmpry(password)) {
            showTip("请输入密码", 2000, "bottom")
            return;
        }
        apidata({
            url: "/api/jed/login",
            data: sdata
        }, function (ret) {
            if (ret.status == 200) {
                showTip("登录成功", 2000, "bottom");
                $api.setStorage('uid', ret.data.info.uid);
                $api.setStorage('phone', ret.data.info.phone);
                $api.setStorage('sign', ret.data.sign);
                $api.setStorage('sign_o', ret.data.sign_o);
                var jsfun = "";
                setTimeout(() => {
                    api.openWin({
                        name: "home",
                        url: "./home.html",
                        reload: true
                    });
                }, 1000)
            } else {
                showTip(ret.return_msg, 1500, "middle")
            }
        });
    }

    /*忘记密码*/
    function toForget() {
        api.openWin({
            name: 'forgetPwd',
            url: './forgetPwd.html',
            reload: true
        });
    }

    /*注册*/
    function toRegist() {
        api.openWin({
            name: "regist",
            url: "./regist.html",
            reload: true
        });
    }

    /*用户使用协议、隐私政策*/
    function article(item) {
        api.openWin({
            name: 'article',
            url: 'article.html',
            reload: true,
            pageParam: {
                id: item
            }
        })
    }

    /*解决键盘顶起固定定位元素*/
    var h = $(window).height();
    $(window).resize(function () {
        if ($(window).height() < h) {
            $('.footer').hide();
        }
        if ($(window).height() >= h) { $('.footer').show(); }
    });
</script>

</html>