<script type="text/javascript" src="../script/api.js"></script>
<script type="text/javascript" src="../script/jquery-3.4.1.min.js"></script>
<script type="text/javascript" src="../script/tools.js"></script>
<script type="text/javascript" src="../script/vue.min.js"></script>
<script type="text/javascript">
    var vm;
    apiready = function(){
         fixbar();
   
            vm=new Vue({
              el:"#vue",
              data:{
                  title:"",
                content:null
              },
              mounted:function(){
                 this.getData()
              },
             methods:{
                 getData(){
                      
                    var sdata = {
                        uid: $api.getStorage("uid"),
                        type:9
                    }

                    apidata({
                        url: "/api/jed/sys_article",
                        data: sdata
                    }, function (ret) {
                        // console.log(JSON.stringify(ret));
                        vm.content=ret.data[0].content
                        vm.title=ret.data[0].title

                    
                    }, function (err) {

                    })





                 }
             }


            })

    };


</script>

<style>
    html,body{background: white}
.m{padding: 68px 0 0 0}
.desc{ overflow: hidden;}
.desc h2{ font-weight: 400;padding: 0 10px; margin: 5px 0; text-align: center;font-size: 16px}

desc .cont{
    line-height: 24px;
