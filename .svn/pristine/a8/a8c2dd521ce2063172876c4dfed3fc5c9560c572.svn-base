<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <meta name="viewport"
    content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0" />
  <title>发布编辑</title>
  <link rel="stylesheet" type="text/css" href="../css/api.css" />
  <link rel="stylesheet" type="text/css" href="../css/iconfont/iconfont.css" />
  <link rel="stylesheet" type="text/css" href="../css/mobileSelect.css" />
  <link rel="stylesheet" type="text/css" href="../css/style.css" />
  <link rel="stylesheet" type="text/css" href="../css/base.css" />
  <style>
    .tradeType {
      padding-left: 10px;
    }
  </style>
</head>

<body>
  <div id="vue">
    <header class="header" id="header">
      <a class="headerLeft" onclick="api.closeWin()">
        <i class="icon iconfont iconback"></i>
      </a>
      <div class="headerTle">发布编辑</div>
      <a class="headerRight addMsg" style="width:12%">
        <span class="submit" @click="submit"><b>保存</b></span>
      </a>
    </header>
    <div class="groupsend">
      <div class="gsWrap">
        <ul class="gsList">
          <li>
            <dl class="flex">
              <dt><b>推广名称</b></dt>
              <dd>
                <input type="text" class="tradeType" v-model="title">
              </dd>
            </dl>
          </li>
          <li>
            <dl class="flex">
              <dt><b>信息分类</b></dt>
              <dd style="position: relative;">
                <input type="text" class="tradeType" id="cate" v-model="catelogy" readonly="readonly">
                <!-- <span id="cate">{{catelogy}}</span> -->
                <span class="iconfont iconright" id="down"></span>

              </dd>
            </dl>
          </li>
          <li>
              <dl class="flex">
                <dt><b>联系人</b></dt>
                <dd>
                  <input type="text" class="tradeType" v-model="username" placeholder="请输入联系人">
                </dd>
              </dl>
          </li>
          <li>
            <dl class="flex">
              <dt><b>联系方式</b></dt>
              <dd>
                <input type="number" class="tradeType" v-model="phone">
              </dd>
            </dl>
          </li>
          <li>
              <dl class="flex">
                <dt><b>数量</b></dt>
                <dd>
                  <input type="number" class="tradeType" v-model="shopnum" placeholder="请输入联系人">
                </dd>
              </dl>
          </li>
          <li>
            <dl class="area">
              <dt> <b>详情描述</b></dt>
              <dd>
                <textarea name="" cols="30" rows="8" id="textarea" maxlength="60" v-on:keyup="content()"
                  v-model="contents"></textarea>

                <p class="p_count"> 字数 <b id="numb">{{ conterNum }}</b>（60字/条）</p>
              </dd>
            </dl>
          </li>
          <li>
            <dl class="flex">
              <dt><b>上传照片</b><span style="color: #cccccc;font-size: 16px;">({{imgList.length}}/5)</span></dt>
              <dd class="uploadBox">
                  <div style="width: 80px;height:80px;border:1px solid #ccc; text-align: center;border-radius: 5px;margin-right: 5px;" @click="uploadpic">
                      <img src="../image/user/add.png" alt="" style="width: 60px;height: 60px;padding-top: 10px;">
                    </div>
                <span v-for="(item,index) in imgList" :key="index" class="imgItem">
                  <img :src="item" alt="">
                  <span class="close" @click="close(index)">
                    ×
                  <!-- <img src="../image/user/close.png" alt="" > -->
                  </span>
                </span>
              </dd>
            </dl>
          </li>
        </ul>
      </div>
    </div>
  </div>
</body>
<script type="text/javascript" src="../script/api.js"></script>
<script type="text/javascript" src="../script/vue.min.js"></script>
<script type="text/javascript" src="../script/mobileSelect.min.js"></script>
<script type="text/javascript" src="../script/tools.js"></script>
<script type="text/javascript" src="../script/jquery-1.7.2.min.js"></script>
<script type="text/javascript">
 var picslist = [];
 var idid = $api.getStorage("uid");
  var ssign = $api.getStorage('sign');
  var ssign_o = $api.getStorage('sign_o');
  var len = 0;
  apiready = function () {
    $api.fixStatusBar($api.byId('header'));
    var item = api.pageParam.item;
   
    if (item.pics) {
      picslist = item.pics.split(',');
    }
    var vm = new Vue({

      el: "#vue",
      data: {
        id:item.id,
        title: item.goods,
        phone: item.phone,
        catelogy: item.type_name,
        cateId: item.type,
        shopnum:item.num,
        username:item.name,
        contents: item.description,
        conterNum: item.description.length,
        cInput: false,
        cateList: [],
        imgList: picslist
      },

      mounted: function () {
        this.initCatelogy();
      },
      methods: {
        content() {
          let self = this;
          if (self.cInput == false) {
            self.conterNum = self.contents.length;
            if (self.conterNum >= 60) {
              showTip("字数最多60个", "500", "top")
            }
          }

        },
        importStart() {
          this.cInput = true;
        },
        importEnd() {
          this.cInput = false;
          // this.write();
        },
        /*提交*/
        submit() {
            var sub = this.imgList.join(',');
          if (!isNotEmpry(this.title)) {
            showTip("请输入有效的标题", 2000, "bottom")
            return;
          }
          if (!isNotEmpry(this.cateId)) {
            showTip("请选择信息分类", 2000, "bottom")
            return;
          }
          if (!isNotEmpry(this.username)) {
            showTip("请输入联系人", 2000, "bottom")
            return;
          }
          var reg =/[\u4e00-\u9fa5]{2,4}/;
          if (!reg.test(this.username)) {
            showTip("请输入正确的联系人", 2000, "bottom")
            return;
          }
          
          if (!isNotEmpry(this.phone)) {
            showTip("请输入联系方式", 2000, "bottom")
            return;
          }
          
          if (!isPositiveInteger(this.shopnum)) {
            showTip("请填写正确的数量(不能有小数)", 2000, "bottom");
            return;
          } 
          if (!isNotEmpry(this.contents)) {
            showTip("请输入详情", 2000, "bottom")
            return;
          }
          if (!isNotEmpry(this.imgList)) {
            showTip("请选择图片", 2000, "bottom")
            return;
          }       
          var sdata = {
            uid: $api.getStorage("uid"),
            id:this.id,
            type:this.cateId,
            goods:this.title,
            pics:sub,
            num:this.shopnum,
            name:this.username,
            phone:this.phone,
            description: this.contents
          }
          apidata({
            url: "/api/jed/purchase_add",
            data: sdata
          }, function (ret) { 
            if (ret.status == 200) {
              showTip("发布成功", "2000", "middle");
              setTimeout(() => {
                api.closeWin();
              }, 2000)
            }
          }, function (err) {
              console.log(JSON.stringify(err));
          })
        },
        initData() {
          var sdata = {
            uid: $api.getStorage("uid"),
            id: id
          };
          apidata({
            url: "/api/jed/purchase_lists",
            data: sdata
          }, function (ret) {
            vm.title = ret.data.title;
          }, function (err) {

          })

        },
        /*分类*/
        initCatelogy() {
          var sdata = {
            uid: $api.getStorage("uid"),
            type: 2
          };
          apidata({
            url: "/api/jed/types_lists",
            data: sdata
          }, function (ret) {
            var clist = [];
            ret.data.forEach(ele => {
              clist.push(ele.type_name);
            })
            var tlist = ret.data;
            var mobileSelect1 = new MobileSelect({
              trigger: '#cate',
              title: '',
              wheels: [
                { data: clist }
              ],
              position: [2], //初始化定位 打开时默认选中的哪个 如果不填默认为0
              transitionEnd: function (indexArr, data) {
              },
              callback: function (indexArr, data) {
                vm.catelogy = data[0];
                var objs = tlist.find(function (obj) {
                  return obj.type_name == vm.catelogy;
                })
                vm.cateId = objs.id;
              }
            });
          }, function (err) {
          })
        },
          /*图片上传*/
          uploadpic(){
            if (picslist.length == 5) {
                showTip('最多只能选择5张图片');
                return;
            }
            upload();
        },
        /*删除图片*/
        close(index){
						var aa = picslist.indexOf(picslist[index]);
            this.imgList.splice(aa, 1)    
        },
        save() {
          
        }
      }
    })
  };
//多图选择
function upload(){
        var num = 5;
        var lens = picslist.length;
        if (lens == 0) {
          num = 5;
        } else{
          num  = 5 - Number(lens)
        }
        var UIAlbumBrowser = api.require('UIAlbumBrowser');
            UIAlbumBrowser.open({
                max: num,
                styles: {
                    bg: '#fff',
                    mark: {
                        icon: '',
                        position: 'bottom_left',
                        size: 20
                    },
                    nav: {
                        bg: 'rgba(0,0,0,0.6)',
                        titleColor: '#fff',
                        titleSize: 18,
                        cancelColor: '#fff',
                        cancelSize: 16,
                        finishColor: '#fff',
                        finishSize: 16
                    },
                },
                alertTitle:'最多选择'+num+'张喔',
                rotation: true
            }, function(ret) {
                if (ret) {
                    if (ret.eventType == "confirm") {
                   
                    var list =ret.list;
                        len = list.length;
                    if (list) {
                        for (let i = 0; i < list.length; i++) {
                           var a = list[i].path;
                           uploading(a);
                        }  
                    } else{
                        console.log(24);   
                    }
                    }
                }
            });            
    }
/*图片上传*/
function uploading(avatar) {
    api.showProgress({
            title: '上传中...',
            modal: true
        });
        api.ajax({
            url: "http://www.keyuanbang.net/api/jed/pic_uploads",
            method: 'post',
            headers: {
                sign: ssign,
                sign_o: ssign_o
            },
            data: {
                files: {
                    file: avatar
                },
                values: {
                    uid: idid
                }
            }
        }, function (ret, err) {
            if (ret) {
                picslist.push(ret.data.url); 
                len --; 
                if (len == 0) {
                    api.hideProgress()
                }      
            } else {
                console.log("失败")
            }
        })
    }
  

</script>
</html>
