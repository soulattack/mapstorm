<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport"
        content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0" />
    <title>全国企业</title>
    <link rel="stylesheet" type="text/css" href="../css/api.css" />
    <link rel="stylesheet" type="text/css" href="../css/iconfont/iconfont.css" />
    <link rel="stylesheet" type="text/css" href="../css/style.css" />
    <style>
        html,
        body {
            background-color: white !important;
        }

        #header {
            background-color: #217bfb;
            color: white;
            height: 50px;
            line-height: 50px;
            text-align-last: center;
            font-size: 16px;
            display: flex;
            justify-content: space-between;
            width: 96%;
            padding: 30px 2% 0;
        }

        #header .headerTle {
            padding-left: 35px;
        }

        .input {
            width: 96%;
            margin: 10px 2%;
            background-color: white;
            height: 40px;
            line-height: 40px;
            display: flex;
            border-radius: 10px;
            border: 1px solid #2f79e6;
        }

        .input .search {
            width: 40px;
            height: 40px;
            text-align: center;
            color: #217bfb;
            font-size: 16px;
        }

        .input input {
            background-color: white;
            text-align: left;
            width: calc(100% - 40px);
            outline: medium;
            font-size: 16px;
            border-radius: 0 10px 10px 0;
        }

        .tip {
            height: 30px;
            line-height: 30px;
            text-align: center;
        }

        .tip p span {
            color: #f43847;
            text-align: center;
        }

        .tip p .export {
            color: #2f79e6;
        }

        .pop {
            font-size: 14px;
            padding-top: 185px;
        }

        .popListWrap {
            margin: 10px 0;
            background: white;
        }

        .popList li {
            border-bottom: 1px solid #f1f2f4;
            padding: 0 10px 10px 15px;
            margin: 10px 0;
        }

        .popList li:last-child {
            border-bottom: none;
            padding-bottom: 0px;
        }

        .popList li .pWrap .pInfo {
            display: flex;
            justify-content: space-between;
            margin: 0 10px;
            line-height: 36px;
            font-size: 14px;
            color: #363636;
        }

        .pEdit {
            margin-top: 5px;
        }

        .line {
            width: 1px;
            height: 20px;
            background-color: #dedede;
            margin-top: 10px;
        }

        .contentitem p {
            text-align: center;
            color: #666666;
            height: 25px;
            line-height: 25px;
        }

        .contentitem .size {
            color: #2c7ae9;
        }

        .top {
            position: fixed;
            top: 0px;
            width: 100%;
            background-color: white;
        }
    </style>
</head>

<body>
    <div class="top">
        <header class="header" id="header">
            <a class="headerLeft" onclick="api.closeWin()">
                <i class="icon iconfont iconback" style="font-size: 18px;"></i>
            </a>
            <div class="headerTle">全国企业</div>
            <div onclick="exportdata()">导出数据</div>
        </header>
        <div class="input">
            <span class="iconfont iconsearch search"></span>
            <input class="value" type="text" placeholder="请输入关键字">
        </div>
        <div class="tip">
            <p>搜索到<span class="num">0</span>家企业,上拉搜索更多,<span class="export" onclick="exportdata()">导出数据</span> </p>
        </div>
    </div>
    <div class="pop" id="vue">
        <div class="popListWrap">
            <ul class="popList">
                <li v-for="(item,index) in list" :key="item.id">
                    <div class="pWrap">
                        <p style="height: 30px;line-height:30px;">{{item.title}}</p>
                        <div class="pInfo">
                            <div class="contentitem">
                                <p>法定代表人</p>
                                <p class="size">{{item.name}}</p>
                            </div>
                            <div class="line"></div>
                            <div class="contentitem">
                                <p>注册资本</p>
                                <p class="size">{{item.money}}</p>
                            </div>
                            <div class="line"></div>
                            <div class="contentitem">
                                <p>成立日期</p>
                                <p class="size">{{item.build_time ? timeFormatYYYYMMdd(item.build_time) : ""}}</p>
                            </div>
                            <div class="pEdit"><span class="iconfont iconright"></span></div>
                        </div>
                        <p style="height: 30px;line-height:30px;">
                            电话：<span v-if="vip">{{item.phone?item.phone:item.tel?item.tel:'企业选择不公示'}}</span>
                            <span
                                v-else>{{item.phone?item.phone.substr(0, 3) + '****' + item.phone.substr(7):item.tel?item.tel.substr(0, 3) + '****' + item.tel.substr(7):'企业选择不公示'}}</span>
                        </p>
                    </div>
                </li>
            </ul>
        </div>
    </div>
</body>
<script type="text/javascript" src="../script/api.js"></script>
<script type="text/javascript" src="../script/vue.min.js"></script>
<script type="text/javascript" src="../script/tools.js"></script>
<script type="text/javascript" src="../script/jquery-3.4.1.min.js"></script>
<script type="text/javascript" src="../script/xlsx.core.min.js"></script>
<script type="text/javascript">
    var vm, index = 0, size = 7, loadmore = false;
    apiready = function () {
        userinfo();
        vm = new Vue({
            el: "#vue",
            data: {
                vip: false,
                list: []
            }
        })
        api.addEventListener({
            name: 'scrolltobottom',
            extra: { threshold: 10 }
        }, function (ret, err) {
            addDatas();
        });
    };

    /*触底加载数据*/
    function addDatas() {
        var keyword = $(".value").val();
        if (null == keyword || "" == keyword) {
            return;
        }
        index += size;
        datas(keyword);
    }

    /*搜索事件*/
    $(".value").on("keydown", function (e) {
        var keyword = $(".value").val();
        if (e.keyCode == 13) {
            if (null == keyword || "" == keyword) {
                showTip("请输入搜索关键字", "800", "bottom")
                return;
            }
            index = 0;
            size = 7;
            loadmore = false;
            vm.list = [];
            datas(keyword)
        }
    })

    /*搜索结果列表*/
    function datas(obj) {
        var sdata = {
            uid: $api.getStorage("uid"),
            keys: obj,
            start: index,
            num: size
        };
        apidata({
            url: "/api/jed/customer_lists",
            data: sdata
        }, function (ret) {
            if (loadmore && ret.data.length == 0) {
                showTip("没有更多了", 800, "bottom")
                return
            }
            if (!loadmore && ret.data.length == 0) {
                showTip("暂无数据", 800, "bottom")
                $('.num').text('0');
                return
            }
            if (ret.data.length != 0) {
                loadmore = true;
            }
            var xlist = ret.data;
            xlist.forEach(element => {
                vm.list.push(element)
            });
            var len = vm.list.length;
            $('.num').text(len);
        });
    }

    /*导出数据*/
    function exportdataw() {
        if (!vm.vip) {
            tipVip(); return;
        }
        var jsonData = vm.list;
        if (jsonData.length == 0) {
            showTip('请选择数据', '500', 'bottom');
            return;
        }
        apidata({
            url: "/api/jed/to_excel",
            data: {
                uid: $api.getStorage("uid"),
                lists: jsonData
            }
        }, function (ret) {
            if (ret.status == 146) {
                //showTip(ret.return_msg, '1500', 'bottom');
                tipAlert("您当月导出数量已达上限","知道了")
                return;
            }
            var urls = ret.data;
            api.download({
                url: urls
            }, function (ret, err) {
                var url = ret.savePath;
                showTip('导出地址为:' + url, '5000', 'bottom')
            })
        })
    }





    function exportdata() {
      console.log("显示 报表框");
     
      var dbs = api.require('dialogBox');
      dbs.actionMenu ({
                rect:{
                    h: 150
                },
                texts:{
                    cancel: '取消'
                },
                items:[
                {
                    text: '下载',
                    icon: 'widget://image/tools/dl.png'
                },
                {
                    text: '分享',
                    icon: 'widget://image/tools/wx.png'
                },
                
                ],
                styles:{
                    bg:'#FFF',
                    column: 2,
                    itemText: {
                        color: '#000',
                        size: 12,
                        marginT:8
                    },
                    itemIcon:{
                        size:50
                    },
                    cancel:{  
                        bg: 'fs://icon.png',   
                        color:'#000',          
                        h: 44 ,                 
                        size: 14       
                    }
                }
            }, function(ret){
                console.log(JSON.stringify(ret));
                if(ret.eventType=="click"){
                        if(ret.index==0){
                          console.log("点击下载")
                          dbs.close({
                            dialogName: 'actionMenu'
                          });
                          download()
                       }else if(ret.index==1){
                         console.log("点击分享")
                         dbs.close({
                            dialogName: 'actionMenu'
                          });
                         shareUrl()
                       }
                }else if(ret.eventType=="cancel")
                {
                    console.log("guanbi")
                    dbs.close({
                            dialogName: 'actionMenu'
                          });
                    
                }
           

            });

    }

  function download(){
    //  console.log(JSON.stringify(books))
         
        if (!vm.vip) {
            tipVip(); return;
        }
        var jsonData = vm.list;
        console.log(JSON.stringify(  jsonData))
        if (jsonData.length == 0) {
            showTip('没有数据', '500', 'bottom');
            return;
        }
        apidata({
            url: "/api/jed/to_excel",
            data: {
                uid: $api.getStorage("uid"),
                lists: jsonData
            }
        }, function (ret) {
            if (ret.status == 200) {
                var urls = ret.data;
                console.log("xian:"+urls);
                api.download({
                    url: urls
                }, function (ret, err) {
                    var url = ret.savePath;
                  
                    showTip('导出地址为:' + url, '5000', 'bottom');
                  console.log("url:"+url)
                   // share(urls)
                })
            } else {
                showTip(ret.return_msg, 1200, "middle")
            }
        });  

  }

  function shareUrl(){
     // console.log(JSON.stringify(books))
         if (!vm.vip) {
            tipVip();
             return;
        }
        var jsonData = vm.list;
        if (jsonData.length == 0) {
            showTip('没有数据', '500', 'bottom');
            return;
        }
        apidata({
            url: "/api/jed/to_excel",
            data: {
                uid: $api.getStorage("uid"),
                lists: jsonData
            }
        }, function (ret) {
            if (ret.status == 200) {
                var urls = ret.data;
                console.log("xian:"+urls);
                api.download({
                    url: urls
                }, function (ret, err) {
                    var url = ret.savePath;
               
                    console.log("url:"+url)
                    share(urls)
                })
            } else {
                showTip(ret.return_msg, 1200, "middle")
            }
        });  


  }


  function share(url){
                var wxPlus = api.require('wxPlus');
                wxPlus.shareWebpage({
                    apiKey: 'wx1b930cf8a9a1c42f',
                    scene: 'session',
                    title: '报表分享',
                       description: '',
                    // thumb: app(),
                    //  contentUrl: fen() + 'index.php?s=/home/index/user/uid/' + 100029
                     contentUrl:url
                }, function(ret, err) {
                    if (ret.status) {
                        //alert('分享成功');
                    } else {
                        //alert(err.code);
                    }
                });
    }







    /*获取用户是否是VIP会员*/
    function userinfo() {
        apidata({
            url: "/api/jed/user_info",
            data: {
                uid: $api.getStorage("uid"),
            }
        }, function (ret) {
            if (ret.data.is_vip == 1) {
                vm.vip = true;
            }
        });
    }

    /*会员开通提示窗*/
    function tip() {
        var dialogBox = api.require('dialogBox');
        dialogBox.taskPlan({
            rect: {
                w: 300
            },
            texts: {
                mainTitle: '温馨提示',
                subTitle: '',
                content: [{
                    text: '权限不足，请开通会员解锁所有功能'
                }],
                btnTitle: '开通会员'
            },
            styles: {
                bg: '#fff',
                corner: 10,
                main: {
                    marginT: 20,
                    color: '#636363',
                    size: 18,
                    bold: true,
                },
                sub: {
                    marginT: 0,
                    color: '#999999',
                    size: 12,
                },
                content: [{
                    bg: '#fff',
                    marginT: 0,
                    marginB: 30,
                    w: 280,
                    h: 40,
                    align: 'center',
                    color: '#bcbcbc',
                    size: 16
                }],
                ok: {
                    marginB: 10,
                    marginL: 10,
                    marginR: 0,
                    w: 280,
                    h: 40,
                    bg: '#217bfb',
                    color: '#fff',
                    size: 16,
                    corner: 10
                }
            },
            tapClose: true
        }, function (ret) {
            if (ret.eventType == 'ok') {
                api.openWin({
                    name: 'memberCenter',
                    url: './memberCenter.html',
                    reload: true
                })
                var dialogBox = api.require('dialogBox');
                dialogBox.close({
                    dialogName: 'taskPlan'
                });
            }
        });
    }
</script>

</html>